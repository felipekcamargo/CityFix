<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OcorrenciaActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imgFotoId"
        android:layout_width="0dp"
        android:layout_height="172dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtDescricaoId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/txtEnderecoId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txtAvaliacaoId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/txtAvaliacaoId"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginBottom="108dp"
        android:layout_marginEnd="96dp"
        android:text="3 / 5"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bEditarId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/txtEnderecoId" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="92dp"
        android:text="Avaliação:"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtAvaliacaoId"
        app:layout_constraintEnd_toStartOf="@+id/txtAvaliacaoId"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bEditarId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Editar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAvaliacaoId" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="Descrição"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtDescricaoId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtDescricaoId"
        app:layout_constraintTop_toBottomOf="@+id/imgFotoId" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtEnderecoId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtEnderecoId"
        app:layout_constraintTop_toBottomOf="@+id/txtDescricaoId" />
</android.support.constraint.ConstraintLayout>